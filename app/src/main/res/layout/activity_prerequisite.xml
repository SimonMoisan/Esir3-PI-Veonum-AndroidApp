<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_view_prerequisite_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/icon_view_prerequisite"
        android:layout_centerHorizontal="true"
        android:text="@string/prerequisite_initial_text"
        android:textSize="50sp" />

    <ImageView
        android:id="@+id/icon_view_prerequisite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/loading_open_source" />

    <TextView
        android:id="@+id/text_view_prerequisite_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon_view_prerequisite"
        android:layout_centerInParent="true"
        android:layout_marginTop="58dp"
        android:layout_marginBottom="-511dp"
        android:text="..."
        android:textSize="30sp" />

</RelativeLayout>